{
  "extends": [
    "plugin:jest/recommended",
    "eslint:recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": ["infra/migration/*"],
  "env": {
		"browser": true,
		"node": true,
    "es6": true // Ativa a permiss√£o da promisse
	},
  "rules": {
    "import/no-anonymous-default-export": ["error", {
      "allowArrowFunction": true,
    }],
    "react/display-name": [2],
		"global-require": "off"
    
	}
}